# Database Configuration
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=leavemarker

# JWT Configuration
# IMPORTANT: Change this to a secure random string in production!
# Generate one using: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-key-change-this-in-production-environment-please-make-it-at-least-32-characters

# Server Configuration
SERVER_PORT=8080

# Email/SMTP Configuration (for notifications and contact form)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
# Contact email (where demo requests are sent) - defaults to MAIL_USERNAME if not set
CONTACT_EMAIL=

# Razorpay Configuration
# Get your keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx
# Webhook secret from: Dashboard > Webhooks > Secret
RAZORPAY_WEBHOOK_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx
# Redirect URLs after payment
RAZORPAY_RETURN_URL=http://localhost:3000/payment/success
RAZORPAY_CANCEL_URL=http://localhost:3000/payment/cancel

# Application Configuration
APP_TIMEZONE=Asia/Kolkata
MAX_EMPLOYEES_PER_COMPANY=500

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Environment
SPRING_PROFILES_ACTIVE=dev
